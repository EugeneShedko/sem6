<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Выберите алгоритм шифрования:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="351"/>
        <RadioButton Content="Маршрутная перестановка" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Checked="SelectAlgorithm"/>
        <RadioButton Content="Множественная перестановка" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Checked="SelectAlgorithm"/>
        <Button Content="Выбрать файл" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Width="102" Click="SelectFile"/>
        <Button Content="Зашифровать" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="102" Click="Encrypt"/>
        <Button Content="Дешифровать" HorizontalAlignment="Left" Margin="10,137,0,0" VerticalAlignment="Top" Width="102" Click="Decrypt"/>

    </Grid>
</Window>
